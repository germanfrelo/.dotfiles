[init]
	defaultBranch = main
[core]
	editor        = code --wait
[diff]
	tool          = vscode
[difftool "vscode"]
	cmd           = code --wait --diff $LOCAL $REMOTE
[merge]
	tool          = vscode
[mergetool "vscode"]
	cmd           = code --wait $MERGED
[gpg]
	format        = ssh
[gpg "ssh"]
	program       = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign       = true
[alias]
